<Window x:Class="H1MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H1MediaPlayer"
        mc:Ignorable="d"
        Title="My Finest Media Player" Height="350" Width="525" FontSize="18">
    <Grid>
        <Button x:Name="btnPlay" Content="Soita" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="105" Background="#FF13DA1C"/>
        <Button x:Name="btnPause" Content="Pauseta" HorizontalAlignment="Left" Margin="240,10,0,0" VerticalAlignment="Top" Width="105" Background="#FFFFFF42"/>
        <Button x:Name="btStop" Content="Seis" HorizontalAlignment="Left" Margin="360,10,0,0" VerticalAlignment="Top" Width="105" Background="#FFEC1313"/>

    </Grid>
</Window>
